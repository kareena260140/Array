class Solution {
  public:
    void rotateArr(vector<int>& arr, int d) {
        int n = arr.size();
        d = d % n;
        if (d == 0) return;

        // reverse first d elements
        reverse(arr.begin(), arr.begin() + d);

        // reverse remaining elements
        reverse(arr.begin() + d, arr.end());

        // reverse whole array
        reverse(arr.begin(), arr.end());
    }
};
