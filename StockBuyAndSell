class Solution {
  public:
    int maximumProfit(vector<int> &prices) {
        int n = prices.size();
        int profit = 0;
        int minPrice = INT_MAX; 

        for (int i = 0; i < n; i++) {
            if (prices[i] < minPrice) {
                minPrice = prices[i];  
            }

            int currentProfit = prices[i] - minPrice;  // profit if we sell today
            if (currentProfit > profit) {
                profit = currentProfit;  // update max profit
            }
        }

        return profit;  // if no profit possible, remains 0
    }
};
