class Solution {
public:
    vector<int> leaders(vector<int>& arr) {
        vector<int> ans;
        int n = arr.size();

        int last = arr[n - 1]; 
        ans.push_back(last);

        for (int i = n - 2; i >= 0; i--) {
            if (arr[i] >= last) {
                 last = arr[i];  // update current biggest element
                ans.push_back(arr[i]);
            }
        }

        // because we traversed from right, leaders are in reverse order
        // just reverse once
        reverse(ans.begin(), ans.end());

        return ans;
    }
};
