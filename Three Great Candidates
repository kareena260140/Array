class Solution {
  public:
    int maxProduct(vector<int> arr) {
        if (arr.size() < 3)
            return 0;

        int first = INT_MIN, second = INT_MIN, third = INT_MIN;
        int min1 = INT_MAX, min2 = INT_MAX;

        for (int i = 0; i < arr.size(); i++) {
            int num = arr[i];

            // Top 3 largest numbers
            if (num > first) {
                third = second;
                second = first;
                first = num;
            } else if (num > second) {
                third = second;
                second = num;
            } else if (num > third) {
                third = num;
            }

            // Two smallest numbers
            if (num < min1) {
                min2 = min1;
                min1 = num;
            } else if (num < min2) {
                min2 = num;
            }
        }

        int product1 = first * second * third;
        int product2 = min1 * min2 * first;

        return max(product1, product2);
    }
};
